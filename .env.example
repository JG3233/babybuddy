# Django Debug Mode (set to false in production)
DEBUG=true

# Secret key for cryptographic signing (CHANGE THIS IN PRODUCTION!)
# Generate a strong key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=replace-me-with-a-strong-random-key-at-least-50-characters

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database configuration
DATABASE_NAME=babybuddy
DATABASE_USER=babybuddy
DATABASE_PASSWORD=babybuddy
DATABASE_HOST=127.0.0.1
DATABASE_PORT=55432

# CSRF trusted origins (must include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://0.0.0.0:8000

# Trust X-Forwarded-For header (only enable if behind a trusted reverse proxy)
# SECURITY WARNING: Only enable this when behind a trusted proxy (e.g., Render, nginx)
# that strips client-provided X-Forwarded-For headers and sets them correctly.
# If enabled improperly, attackers can bypass rate limiting by spoofing their IP.
# Default: false (safest)
TRUST_X_FORWARDED_FOR=false
